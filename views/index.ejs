<!DOCTYPE html>
<html lang="en">
  <%- include('./parials/head') %>
  <body>
    <%- include('./parials/nav') %>

    <div class="blogs content">
      <h2>All Blogs</h2>

      <% if(blogs.length > 0){%> <% blogs.forEach(blog => { %>
      <a href="/blogs/<%= blog._id %>">
        <h3 class="title"><%= blog.title %></h3>
        <p snippet="snippet"><%= blog.snippet %></p>
      </a>
      <% }) %> <%} %>
    </div>
    <%- include('./parials/footer') %>
  </body>
</html>
